<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#345534"
            android:text="Название" />

        <Button
            android:id="@+id/btn_stop_dialog"
            android:text="в стоп"
            android:background="@color/colorTangerine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/editetext_dialog"
            android:hint="Изменить стоимоcть"
            android:textColor="@color/colorTangerine"
            android:layout_margin="25dp"
            android:gravity="center"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_ok_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="Ок"/>

        </LinearLayout>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="2">

           <Button
               android:id="@+id/btn_del_cost_dialog"
               android:text="Удалить скидку"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginStart="5dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="15dp"
               android:layout_marginEnd="15dp"/>

           <Button
               android:id="@+id/btn_cancel_dialog"
               android:text="Отмена"
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_marginEnd="5dp"/>
       </LinearLayout>


    </LinearLayout>
</ScrollView>