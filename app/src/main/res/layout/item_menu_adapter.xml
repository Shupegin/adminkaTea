<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_adapter"
        android:background="#123345"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/name_tea"
        android:text="Text"
        android:textSize="30dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/description_tea"
        android:text="Discription"
        android:textSize="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/name_tea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/cost_tea"
        android:text="300p"
        android:textSize="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/description_tea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/gram_tea"
        android:text="50Gramm"
        android:textSize="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cost_tea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

</RelativeLayout>