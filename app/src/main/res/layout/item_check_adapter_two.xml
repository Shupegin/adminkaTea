<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSalmon"
    android:layout_margin="3dp"
    android:padding="3dp">


    <TextView
        android:id="@+id/text_name_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/qyellow"
        android:text="Name"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/lastCost_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/text_name_item"
        android:text="Изменение цены: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lastCost"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_below="@id/text_name_item"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/lastCost_text"
        android:layout_toRightOf="@+id/lastCost_text"
        android:background="@drawable/ic_line"
        android:text="lastCost"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/newCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name_item"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/lastCost"
        android:layout_toRightOf="@+id/lastCost"
        android:textColor="@color/colorTangerine"
        android:textStyle="bold"
        android:text="newCost"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/stop_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastCost"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:background="#F44336"
        android:text="в стоп"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/stop_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop_control"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:background="@color/GreenColor"
        android:text="в актив"
        android:textSize="16dp" />


</RelativeLayout>