<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menufragment.MenuFragment">

   <TextView
       android:id="@+id/text_choose"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="5dp"
       android:background="#284223"
       android:padding="3dp"
       android:text="Выбираем Элементы:"
       android:textColor="#E2ECE7"
       android:textSize="20dp"/>

   <androidx.appcompat.widget.SearchView
       android:id="@+id/Search_view"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/text_choose"
       android:layout_width="300dp"
       android:layout_height="wrap_content"/>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recucler_menu"
       android:layout_below="@+id/Search_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

</RelativeLayout>